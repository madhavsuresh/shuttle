<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/shuttleStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Shuttle Stop"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="12dp" />

    <com.google.android.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/shuttleStop"
        android:layout_marginTop="55dp"
        android:apiKey="0im0pz5bFJiWtNcfjqUu0xEFUB0ja-kBcmZScQA" >
    </com.google.android.maps.MapView>

    <Button
        android:id="@+id/fastest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="23dp"
        android:text="Fastest" />

    <Button
        android:id="@+id/shortest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fastest"
        android:layout_alignBottom="@+id/fastest"
        android:layout_alignParentRight="true"
        android:layout_marginRight="52dp"
        android:text="Shortest" />

    <TextView
        android:id="@+id/shuttleTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shuttleStop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Shuttle Time"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp" />

    <ToggleButton
        android:id="@+id/destToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#FF000000"
        android:text="ToggleButton" />

    <TextView
        android:id="@+id/actualLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shuttleStop"
        android:layout_centerHorizontal="true"
        android:textSize="19dp"
        android:text="TextView" />

</RelativeLayout>